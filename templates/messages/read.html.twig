{% extends 'base.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
<section class="container">
	<div class="row">
		<div class="col-12">
			<div class="row">
			<div class="col-md-6">
			<h1 class="messagerie">{{ message.title }}</h1>
			{#<p>Message de
				{{ message.sender.name|title }}</p>#}
			<p>Le
				{{ message.createdAt|date }}</p>
			<div>{{ message.message }}</div>
			<a class="btn btn-success-success" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
				Voir mes dossiers
			</a>
			<a href="{{path("answer", {'id' : message.sender.id })}}" class="btn btn-success-success">Répondre</a>
		</div>
		<div class="col-md-6">
				<img src="{{ asset('images/reading.jpg')}}"class="img-fluid pl-5" alt="Confirm_email">
				</div>
	</div></div>
</section>
<div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
	<div class="offcanvas-header">
		<h2 class="offcanvas-title" id="offcanvasExampleLabel">Mes dossiers</h2>
		<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
	</div>
	<div class="offcanvas-body">
		<div class="list-group">
			<a href="{{ path("received") }}" class="list-group-item list-group-item-action border-0">Boîte de réception</a>
		</div>
		<div class="list-group">
			<a href="{{ path("sent") }}" class="list-group-item list-group-item-action border-0">Eléments envoyés</a>
		</div>
		<div class="list-group">
				<a href="{{path("messages")}}" class="list-group-item list-group-item-action border-0">Elements supprimés</a>
			</div>
	</div>
</div>
{% endblock %}