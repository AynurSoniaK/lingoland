{% extends "base.html.twig" %}

{% block title %}{{ parent() }} | Dashboard | Gestion des niveaux {% endblock %}



{% block h1 %}Gestion des niveaux{% endblock %}

{% block body %}



    {% for notification in app.flashes('success') %}
            <div class="alert alert-success col-md-6 mx-auto text-center disparition">{{ notification }}</div>
    {% endfor %}


    <div class="row justify-content-end m-2">
        <a class='btn btn-success p-2 col-md-3' href="{{ path('level_ajouter') }}">Ajouter un niveau</a>
    </div>
       
    {% if levels %} 
        
        <table class="table table-hover table-striped text-center">

            <thead class="bg-dark text-white">

                <tr>
                
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                
                </tr>
            
            
            </thead>


            <tbody>
            
                {% for level in levels  %}
                    <tr class="align-middle">

                        <td >{{ level.id }}</td>
                        <td>{{ level.name }}</td>
                    

                        <td>
                            <a href="{{ path('level_modifier' , {"id" : level.id }  ) }}" >
                                <img src="{{ asset('images/pencil-square.svg') }}" alt="icône de modification">
                            </a>
                        </td>



                        <td>
                            <a href="{{ path('level_supprimer' , {"id" : level.id }  ) }}" onclick="return confirm('Confirmez-vous la suppression de le niveau ?')">
                                <img src="{{ asset('images/trash.svg') }}" alt="icône de suppression">
                            </a>
                        </td>
                    
                    
                    
                    </tr>
                {% endfor %}
            
            
            </tbody>
        
        
        </table>


    {% else %}
        <h4 class="text-danger fst-italic text-center mt-3">Il n'y a aucun niveau pour le moment</h4>
    {% endif %}




{% endblock %}